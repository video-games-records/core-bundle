{% extends '@SonataAdmin/CRUD/show.html.twig' %}

{% block show_groups %}
    <div class="row">
        {% block field_row %}
            {% for code in groups %}
                {% set show_group = admin.showgroups[code] %}

                <div class="{{ show_group.class|default('col-md-12') }} {{ no_padding|default(false) ? 'nopadding' }}">
                    <div class="{{ show_group.box_class }}">
                        <div class="box-header">
                            <h4 class="box-title">
                                {% block show_title %}
                                    {{ show_group.label|trans({}, show_group.translation_domain|default(admin.translationDomain)) }}
                                {% endblock %}
                            </h4>
                        </div>
                        <div class="box-body table-responsive no-padding">
                            <table class="table">
                                <tbody>
                                {% for field_name in show_group.fields %}
                                    {% block show_field %}
                                        <tr class="sonata-ba-view-container">
                                            {% if elements[field_name] is defined %}
                                                {% if field_name == 'player' %}
                                                    {% if object.getPlayerChart() %}
                                                        <th>Player</th>
                                                        <td>{{ object.getPlayerChart().getPlayer().getPseudo() }}</td>
                                                    {%  else %}
                                                        <th>Player</th>
                                                        <td>NO PLAYER</td>
                                                    {% endif %}
                                                {% elseif field_name == 'chart' %}
                                                    {% if object.getPlayerChart() %}
                                                        {{ elements[field_name]|render_view_element(object)}}
                                                        </tr><tr>
                                                        <th>LINK</th>
                                                        <td>
                                                            <a target="_blank" href="{{ front_url }}/en/{{ object.getPlayerChart().getChart().getUrl() }}">({% trans %}link.front.chart{% endtrans %})</a>
                                                        </td>
                                                    {%  else %}
                                                        <th>Chart</th>
                                                        <td>NO CHART</td>
                                                    {% endif %}
                                                {% elseif field_name == 'picture' %}
                                                    {% if object.getPicture() != null %}
                                                        <th>Picture</th>
                                                        <td><img src="{{ path('vgr_core_picture_index',{'id': object.getPicture().getId()}) }}" width="100%" alt="" /></td>
                                                    {% endif %}
                                                {% elseif field_name == 'video' %}
                                                    {% if object.getVideo() != null %}
                                                        <th>Video</th>
                                                        <td>
                                                            <iframe width="720" height="405"
                                                                    src="{{ object.getVideo().getEmbeddedUrl() }}">
                                                            </iframe>
                                                        </td>
                                                    {% endif %}
                                                {% elseif field_name == 'playerChart' %}
                                                    {% if object.getPlayerChart() %}
                                                        <th>Score (ID={{ object.getPlayerChart().getId() }})</th>
                                                        <td>
                                                            {% for lib in object.getPlayerChart().libs %}
                                                                {{ lib }}
                                                            {% endfor %}
                                                        </td>
                                                    {%  else %}
                                                        <th>PlayerChart</th>
                                                        <td>NO PLAYER CHART</td>
                                                    {% endif %}
                                                {%  else %}
                                                    {{ elements[field_name]|render_view_element(object)}}
                                                {% endif %}

                                            {% endif %}
                                        </tr>
                                    {% endblock %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endblock %}

    </div>
{% endblock %}
